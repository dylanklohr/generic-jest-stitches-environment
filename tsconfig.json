{
	"compilerOptions": {
		"target": "ES2019",
		"baseUrl": "./",
		"outDir": "./dist",
		"module": "es6",
		"allowJs": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react"
	},

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
		"__tests__",
    "node_modules"
  ]
}
